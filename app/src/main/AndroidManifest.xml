<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.homework.moviecatalog">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:largeHeap="true"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.MovieCatalog"
        android:usesCleartextTraffic="true"
        tools:targetApi="m">
        <activity
            android:name="com.homework.moviecatalog.ui.activities.TVSearchActivity"
            android:exported="false" />
        <activity
            android:name="com.homework.moviecatalog.ui.activities.MovieSearchActivity"
            android:exported="false" />
        <activity
            android:name="com.homework.moviecatalog.ui.activities.MovieDetailsActivity"
            android:exported="false" />
        <activity
            android:name="com.homework.moviecatalog.ui.activities.MoreMovieActivity"
            android:exported="false" />
        <activity
            android:name="com.homework.moviecatalog.ui.activities.MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.homework.moviecatalog.ui.activities.TVDetailsActivity"
            android:exported="false" />
        <activity
            android:name="com.homework.moviecatalog.ui.activities.MoreTVActivity"
            android:exported="true" />
    </application>

</manifest>